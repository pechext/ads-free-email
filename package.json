{
  "name": "ads-free-gmail",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "build": "webpack --progress --config webpack/webpack.config.js",
    "build:production": "npm run build -- --env=mode=production",
    "build:staging": "npm run build -- --env=mode=development",
    "zip:staging": "cd ./dist/chrome; zip -vr ../../dist/chrome/staging-`echo $(git symbolic-ref --short HEAD) | tr / _`-`git rev-parse --short HEAD`.zip ./* -x \"*.DS_Store\"",
    "zip:production": "cd ./dist/chrome; zip -vr ../../dist/chrome/production-`echo $(git symbolic-ref --short HEAD) | tr / _`-`git rev-parse --short HEAD`.zip ./* -x \"*.DS_Store\"",
    "prepare:staging": "npm run build:staging && npm run zip:staging",
    "prepare:production": "npm run build:production && npm run zip:production",
    "format": "prettier --write \"src/**/*.tsx\" \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "watch": "npm run build:staging -- --env=watch=true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.0.8",
    "@pechext/extension-essentials-lib": "^0.1.4"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.8",
    "copy-webpack-plugin": "^11.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
